	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Jest tests",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}\\website",
			"program": "${workspaceFolder}\\website\\node_modules\\jest\\bin\\jest.js",
			"args": [
				"-i"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			]
		}
	]
}
